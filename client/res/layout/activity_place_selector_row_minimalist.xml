<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/placeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="placeName"
            android:textColor="#0099FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/placePoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeName"
            android:text="placePoint"
            android:textSize="18sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/placeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placePoint"
            android:text="placeDesc"
            android:textSize="18sp" />

		<TextView
            android:id="@+id/placeAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeDesc"
            android:text="placeAddress"
            android:textSize="16sp"
            android:textColor="#372c24" />
        
        <TextView
            android:id="@+id/placeDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeAddress"
            android:text="placeDistance"
            android:textColor="#989898"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>