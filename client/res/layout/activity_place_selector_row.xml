<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp" >

    <ImageView
        android:id="@+id/place_icon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/place_icon"
        android:background="#33b5e5" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="place name"
            android:textSize="20sp"
            android:textColor="#0099FF"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/place_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="place desc"
            android:textSize="18sp"
            android:layout_below="@+id/place_name" />

        <TextView
            android:id="@+id/place_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="place_rating"
            android:textSize="18sp"
            android:layout_below="@+id/place_desc" />

        <TextView
            android:id="@+id/place_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="place_distance"
            android:textSize="16sp"
            android:textColor="#989898"
            android:layout_below="@+id/place_rating" />
    </RelativeLayout>

</LinearLayout>