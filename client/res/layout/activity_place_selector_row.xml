<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp" >

        <ImageView
            android:id="@+id/placeIcon"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginRight="10dp"
            android:background="#33b5e5"
            android:src="@drawable/place_icon" />

        <TextView
            android:id="@+id/placeReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeIcon"
            android:text="placeReviews"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/placeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="placeName"
            android:textColor="#0099FF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/placeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeName"
            android:text="placeDesc"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/placeDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/placeDesc"
            android:text="placeDistance"
            android:textColor="#989898"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>