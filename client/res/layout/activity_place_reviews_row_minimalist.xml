<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/reviewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reviewUser"
            android:textColor="#0099FF"
            android:textSize="20sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/similarity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reviewUser"
            android:text="similarity"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/reviewPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/similarity"
            android:text="reviewPoint"
            android:textSize="18sp" />
        
        <TextView
            android:id="@+id/reviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/reviewPoint"
            android:text="reviewText"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>